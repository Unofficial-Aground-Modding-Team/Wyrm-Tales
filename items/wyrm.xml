<data>
  <procedure id="wyrm_basic_apply">
    <action>
      var i = getItem("wyrm_weapon" + getGlobal("wyrm_tier")); player.equipment.forceEquip("weapon", player, i.asItem());
      var i2 = getItem("wyrm_drill" + getGlobal("wyrm_tier")); player.equipment.forceEquip("pickaxe", player, i2.asItem());
      var i3 = getItem("wyrm_body" + getGlobal("wyrm_tier")); player.equipment.forceEquip("armor", player, i3.asItem());
      player.multiItemPopup([new ItemCt(i, 1),new ItemCt(i2, 1),new ItemCt(i3, 1)]);
    </action>
  </procedure>
<action>

